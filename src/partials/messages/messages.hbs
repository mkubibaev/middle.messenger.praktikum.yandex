<ul class="messages">
  {{#each messages}}
    {{#with this}}
      <li class="message {{#if own}}message--own{{/if}}">
        <p class="message__text">{{text}}</p>
        <div class="message__info">
          <span class="message__date">{{dateTime}}</span>
          {{#if status}}
            <span class="message__status"><i class="bi bi-check-all"></i></span>
          {{/if}}
        </div>
      </li>
    {{/with}}
  {{/each}}
</ul>